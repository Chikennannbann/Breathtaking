<div class='container mt-5'>
  <div class='row'>
    <div class='col-md-12'>
      <h3>投稿一覧</h3>
      <table class="table table-hover">
        <thead>
          <tr>
            <th>投稿日時</th>
            <th>投稿者</th>
            <th>タイトル</th>
          </tr>
        </thead>
        <% @posts.each do |f| %>
        <tbody>
          <tr onclick='window.location="<%= '/admin/posts/' + f.id.to_s %>"' role="link" >
            <td><%= f.created_at.strftime('%Y/%m/%d %H:%M') %></td>
            <td><%= link_to f.end_user.name, admin_post_path(f.end_user_id) %></td>
            <td><%= f.title %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>

