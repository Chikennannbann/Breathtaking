<div class='container my-5'>
  <div class='row'>
    <div class='col-sm-12 col-md-12 col-lg-12 px-sm-0'>
      <h3>投稿一覧</h3>
      <table class='table table-hover'>
        <thead class='thead-dark'>
          <tr>
            <th>投稿日時</th>
            <th>タイトル</th>
            <th>投稿者</th>
          </tr>
        </thead>
        <% @posts.each do |f| %>
        <tbody>
          <tr onclick='window.location="<%= '/admin/posts/' + f.id.to_s %>"' role="link" >
            <td><%= l f.created_at %></td>
            <td><%= f.title %></td>
            <td><%= f.end_user.name %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
    <div class='mx-auto mt-4'>
      <div class='pagination'><%= paginate @posts %></div>
    </div>
  </div>
</div>

