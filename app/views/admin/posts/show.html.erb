<div class='container my-5'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <%= image_tag @post.get_view_image, size:'500x300' %>
    </div>
  </div>
  <div class='row my-4'>
    <div class='col-6'>
      <table class='table'>
        <tr>
          <th><%= @post.title %></th>
        </tr>
        <tr>
          <td><%= @post.body %></td>
        </tr>
      </table>
      <table class='table'>
        <tr>
          <th>国</th>
          <td><%= @post.nation %></td>
        </tr>
        <tr>
          <th>県・州</th>
          <td><%= @post.nation %></td>
        </tr>
        <tr>
          <th>スポット</th>
          <td><%= @post.nation %></td>
        </tr>
      </table>
    </div>
    <div class='col-4 offset-1'>
      <table class="table">
        <tr>
          <td colspan='3'>
            <u><%= link_to @post.end_user.name, admin_end_user_path(@post.end_user_id), class: 'text-dark' %></u>
          </td>
        </tr>
        <tr>
          <td><%= l @post.created_at, format: :short %></td>
        </tr>
        <tr>
          <td>
            <%= link_to "戻る", admin_posts_path, class: 'btn btn-dark' %>
            <%= link_to "投稿削除", post_path, method: :delete, class: 'btn btn-outline-dark'%>
          </td>
        </tr>
      </table>
    </div>
  </div>
  <div class='row'>
    <div class='col-md-8 mx-auto'>
      <div class='comments-counter'>
        <%= render 'public/post_comments/counter', post: @post %>
      </div>
      <div class='comments-index'>
        <% @post.post_comments.each do |comment| %>
          <table class='table table-sm text-left'>
            <colgroup>
              <col class="col-1">
              <col class="col-2">
              <col class="col-7">
              <col class="col-2">
            </colgroup>
            <tr>
              <td rowspan='2'><%= image_tag comment.end_user.get_profile_image, size:'50x50' %></td>
              <td rowspan='2'><u><%= link_to comment.end_user.name, admin_end_user_path(@post.end_user_id), class: 'text-dark' %></u></td>
              <td rowspan='2'><%= comment.body %></td>
              <td><%= l comment.created_at, format: :short %></td>
            </tr>
            <tr>
              <td>
                <%= link_to "削除", post_post_comment_path(comment.post, comment), method: :delete, remote: true, class: 'btn btn-sm btn-outline-dark' %>
              </td>
            </tr>
          </table>
        <% end %>
      </div>
    </div>
  </div>
</div>