<div class="container my-5">
  <div class="row">
    <div class='col-md-6 mx-auto text-center'>
        <h3><%= @end_user.name %>さんの詳細編集</h3>
        <%= render 'layouts/errors', object: @end_user %>
        <%= form_with model: @end_user, url: admin_end_user_path, method: :patch do |f| %>
        <table class="table text-left my-4">
          <tr>
            <th>ユーザーID</th>
            <td><%= @end_user.id %></td>
          </tr>
          <tr>
            <th><%= f.label :"名前" %></th>
            <td><%= f.text_field :name, autofocus: true, autocomplete: "name" %></td>
          </tr>
          <tr>
            <th><%= f.label :"メールアドレス" %></th>
            <td><%= f.text_area :email %></td>
          </tr>
          <tr>
            <th><%= f.label :"プロフィール" %></th>
            <td><%= f.text_area :introduction %></td>
          </tr>
          <tr>
            <th><%= f.label :"プロフィール写真" %></th>
            <td><%= f.file_field :profile_image, size: "200x200", accept:'image/*' %></td>
          </tr>
            <th><%= f.label :"ステータス" %></th>
            <td>
              <%= f.radio_button :is_deleted, :false %>
              <%= f.label :is_deleted, "有効", class: 'text-success font-weight-bold' %>
              <%= f.radio_button :is_deleted, :true %>
              <%= f.label :is_deleted, "退会", class: 'text-secondary' %>
            </td>
          </tr>
        </table>
        <div class='row'>
          <div class='col-4 mx-auto'>
            <%= link_to "戻る", admin_end_user_path(@end_user), class: 'btn btn-outline-dark btn-block' %>
          </div>
          <div class='col-4 mx-auto'>
            <%= f.submit "変更を保存", class: 'btn btn-dark btn-block' %>
          </div>
        </div>
        <% end %>
    </div>
  </div>
</div>