<div class='container my-5'>
  <div class='row'>
    <div class='col-sm-10 col-md-8 col-lg-6 px-sm-0 mx-auto text-center'>
      <h3><%= @end_user.name %> さんの詳細</h3>
      <table class=' table text-left my-4'>
        <tr>
          <th>ユーザーID</th>
          <td><%= @end_user.id %></td>
        </tr>
        <tr>
          <th>名前</th>
          <td><%= @end_user.name %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @end_user.email %></td>
        </tr>
        <tr>
          <th>プロフィール</th>
          <td><%= @end_user.introduction %></td>
        </tr>
        <tr>
          <th>プロフィール画像</th>
          <td><%= image_tag @end_user.get_profile_image, size:'100x100' %></td>
        </tr>
          <th>ステータス</th>
          <td>
            <% if @end_user.is_deleted %>
              <span class='text-secondary'>退会</span>
            <% else %>
              <span class='text-success font-weight-bold'>有効</span>
            <% end %>
          </td>
        </tr>
      </table>
      <div class='row'>
        <div class='col-4 mx-auto'>
          <%= link_to "戻る", admin_end_users_path, class: 'btn btn-outline-dark btn-block' %>
        </div>
        <div class='col-4 mx-auto'>
          <%= link_to "編集する", edit_admin_end_user_path(@end_user.id), class: 'btn btn-dark btn-block' %>
        </div>
      </div>
    </div>
  </div>
</div>