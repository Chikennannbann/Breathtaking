<div class='container my-5'>
  <div class='row'>
    <div class='col-md-12'>
      <h3>ユーザー一覧</h3>
      <table class="table table-hover">
        <thead class='thead-dark'>
          <tr>
            <th>ID</th>
            <th>名前</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @end_users.each do |f| %>
            <tr onclick='window.location="<%= '/admin/end_users/' + f.id.to_s %>"' role="link" >
              <td><%= f.id %></td>
              <td><%= f.name %></td>
              <td><%= f.email %></td>
              <td>
                <% if f.is_deleted %>
                  <span class="text-secondary">退会</span>
                <% else %>
                  <span class="text-success font-weight-bold">有効</span>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
