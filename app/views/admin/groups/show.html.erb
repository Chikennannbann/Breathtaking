<div class='container mt-5'>
  <div class='row'>
    <h3>グループ詳細</h3>
        <table class='table'>
          <thead>
            <tr>
              <td><%= image_tag @group.get_group_image, size:'100x100' %></td>
            </tr>
            <tr>
              <th>グループ名</th>
              <td><%= @group.name %></td>
            </tr>
            <tr>
              <th>概要</th>
              <td><%= @group.caption %></td>
            </tr>
            <tr>
              <th>行き先</th>
              <td><%= @group.destination %></td>
            </tr>
            <tr>
              <th>日付</th>
              <td><%= @group.date %></td>
            </tr>
            <tr>
              <th>メンバー</th>
              <td>
                <% @group.end_users.each do |f| %>
                  <%= link_to f.name, admin_end_user_path(f) %><br>
                <% end %>
              </td>
            </tr>
            <tr>
              <th>作成者</th>
              <td><%= @group.owner_name %></td>
            </tr>
            <tr>
              <td>
                  <%= link_to "削除", group_path, method: :delete, class: 'btn btn-outline-danger' %>
              </td>
            </tr>
          </thead>
        </table>
  </div>
</div>
