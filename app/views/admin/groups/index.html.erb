<div class='container mt-5'>
  <div class='row'>
    <h3>グループ一覧</h3>
        <table class='table table-hover'>
          <thead>
            <tr>
              <th></th>
              <th>グループ名</th>
              <th>行き先</th>
              <th>日付</th>
              <th>参加人数</th>
            </tr>
          </thead>
          <tbody>
          <% @groups.each do |f| %>
            <tr onclick='window.location="<%= '/admin/groups/' + f.id.to_s %>"' role='link'>
              <td><%= image_tag f.get_group_image, size:'80x80' %></td>
              <td><%= link_to f.name, admin_group_path(f) %></td>
              <td><%= f.destination %></td>
              <td><%= f.date %></td>
              <td><%= f.end_users.count %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
  </div>
</div>
