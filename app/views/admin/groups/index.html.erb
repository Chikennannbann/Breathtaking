<div class='container my-5'>
  <div class='row'>
    <div class='col-sm-12 col-md-12 col-lg-12 px-sm-0'>
      <h3>グループ一覧</h3>
      <table class='table table-hover'>
        <thead class='thead-dark'>
          <tr>
            <th></th>
            <th>グループ名</th>
            <th>行き先</th>
            <th>日付</th>
            <th>参加人数</th>
          </tr>
        </thead>
        <tbody>
          <% @groups.each do |f| %>
            <tr onclick='window.location="<%= '/admin/groups/' + f.id.to_s %>"' role='link'>
              <td><%= image_tag f.get_group_image, size:'80x80' %></td>
              <td><%= f.name %></td>
              <td><%= f.destination %></td>
              <td><%= f.date %></td>
              <td><%= f.end_users.count %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class='col-md-2 mx-auto mt-4'>
      <div class='pagination'><%= paginate @groups %></div>
    </div>
  </div>
</div>
