<div class="container mt-5">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>投稿編集</h1>
      <%= form_with model:@post, url: post_path, method: :patch do |f| %>
        <table class='table'>
          <tr>
            <td><%= f.label :"写真" %></td>
            <td><%= f.file_field :view_image, size: "200x200", accept:'image/*' %></td>
          </tr>
          <tr>
            <td><%= f.label :"タイトル"%></td>
            <td><%= f.text_field :title %></td>
          </tr>
          <tr>
            <td><%= f.label :"コメント" %></td>
            <td><%= f.text_area :body %></td>
          </tr>
          <tr>
            <td><%= f.label :"国"%></td>
            <td><%= f.text_field :nation %></td>
          </tr>
          <tr>
            <td><%= f.label :"県、州"%></td>
            <td><%= f.text_field :prefecture %></td>
          </tr>
          <tr>
            <td><%= f.label :"スポット名"%></td>
            <td><%= f.text_field :place %></td>
          </tr>
        </table>
        <%= f.submit "更新", class: 'btn btn-outline-success' %>
      <% end %>
    </div>
  </div>
</div>