<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-9 col-lg-4 px-5 px-sm-0 mx-auto">
<h2>ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :"メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :"パスワード" %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :"ログイン状態を保存する" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログイン" %>
  </div>
<% end %>
<%= link_to '新規登録', new_end_user_registration_path, class: 'link text-warning' %><br>
<%= link_to 'ゲストログイン', end_users_guest_sign_in_path, method: :post, class: 'link text-warning' %>
    </div>
  </div>
</div>