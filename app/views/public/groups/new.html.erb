<div class='container my-5'>
  <div class='row'>
    <div class='col-sm-12 col-md-8 col-lg-6 px-sm-0 mx-auto text-center'>
      <h2>新規グループ</h2>
      <%= render 'layouts/errors', object: @group %>
      <%= form_with model:@group, url: groups_path, method: :post do |f| %>
        <%= render 'public/groups/form', f: f %>
        <div class='row'>
          <div class='col-4 mx-auto'>
            <%= link_to "戻る", groups_path, class: 'btn btn-outline-dark btn-block' %>
          </div>
          <div class='col-4 mx-auto'>
            <%= f.submit "作成", class: 'btn btn-dark btn-block' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>