<div class='container mt-5'>
  <div class='row'>
    <%= link_to "グループを作成する", new_group_path, class: 'btn btn-outline-success' %>
      <% @groups.each do |f| %>
        <table class='table'>
          <thead>
            <tr>
              <th></th>
              <th>グループ名</th>
              <th>行き先</th>
              <th colspan='3'>日付</th>
            </tr>
            <tr>
              <td><%= image_tag f.get_group_image, size:'80x80' %></td>
              <td><%= link_to f.name, group_path(f) %></td>
              <td><%= f.destination %></td>
              <td><%= f.date %></td>
              <td>
                <% if f.owner_id == current_end_user.id %>
                  <%= link_to "編集", edit_group_path(f), class: 'btn btn-outline-warning' %>
                <% end %>
              </td>
            </tr>
          </thead>
        </table>
      <% end %>
  </div>
</div>
