<div class='container mt-5'>
  <div class='row'>
    <%= image_tag @group.get_group_image, size:'100x100' %>
        <table class='table'>
          <thead>
            <tr>
              <th>グループ名</th>
              <td><%= @group.name %></td>
            </tr>
            <tr>
              <th>概要</th>
              <td><%= @group.caption %></td>
            </tr>
            <tr>
              <th>行き先</th>
              <td><%= @group.destination %></td>
            </tr>
            <tr>
              <th>日付</th>
              <td><%= @group.date %></td>
            </tr>
            <tr>
              <th>メンバー</th>
              <td>
                <% @group.end_users.each do |f| %>
                  <%= link_to f.name, end_user_path(f) %><br>
                <% end %>
              </td>
            </tr>
            <tr>
              <th>作成者</th>
              <td><%= @group.owner_name %></td>
            </tr>
            <tr>
              <th></th>
              <td>
                <% if @group.owner_id == current_end_user.id %>
                  <%= link_to "メール作成", new_group_event_notice_path(@group), class: 'btn btn-outline-primary' %>
                  <%= link_to "編集", edit_group_path(@group), class: 'btn btn-outline-warning' %>
                  <%= link_to "削除", group_path, method: :delete, class: 'btn btn-outline-danger' %>
                <% elsif @group.end_users.include?(current_end_user) %>
                  <%= link_to "脱退する", group_withdraw_path(@group), method: :delete, class: 'btn btn-outline-danger' %>
                <% else %>
                  <%= link_to "参加する", group_join_path(@group), class: 'btn btn-outline-success' %>
                <% end %>
              </td>
            </tr>
          </thead>
        </table>
  </div>
</div>
