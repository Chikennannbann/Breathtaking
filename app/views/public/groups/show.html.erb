<div class='container mt-5'>
  <div class='row'>
    <%= image_tag @group.get_group_image, size:'100x100' %>
        <table class='table'>
          <thead>
            <tr>
              <th>グループ名</th>
              <td><%= @group.name %></td>
            </tr>
            <tr>
              <th>概要</th>
              <td><%= @group.caption %></td>
            </tr>
            <tr>
              <th>行き先</th>
              <td><%= @group.destination %></td>
            </tr>
            <tr>
              <th>日付</th>
              <td><%= @group.date %></td>
            </tr>
            <tr>
              <th>作成者</th>
              <td>
                <%= @group.owner_id %>
                <% if @group.owner_id == current_end_user.id %>
                  <%= link_to "編集", edit_group_path(@group), class: 'btn btn-outline-warning' %>
                  <%= link_to "削除", group_path, method: :delete, class: 'btn btn-outline-danger' %>
                <% end %>
              </td>
            </tr>
          </thead>
        </table>
  </div>
</div>
