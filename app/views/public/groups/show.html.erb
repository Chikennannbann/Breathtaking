<div class='container my-5'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-6 px-5 px-sm-0 mx-auto text-center">
    <%= image_tag @group.get_group_image, size:'100x100' %>
        <table class='table text-left my-4'>
          <thead>
            <tr>
              <th>グループ名</th>
              <td><%= @group.name %></td>
            </tr>
            <tr>
              <th>概要</th>
              <td><%= @group.caption %></td>
            </tr>
            <tr>
              <th>行き先</th>
              <td><%= @group.destination %></td>
            </tr>
            <tr>
              <th>日付</th>
              <td><%= @group.date %></td>
            </tr>
            <tr>
              <th>メンバー</th>
              <td>
                <% @group.end_users.each do |f| %>
                  <u><%= link_to f.name, end_user_path(f), class: 'text-dark' %></u>
                <% end %>
              </td>
            </tr>
            <tr>
              <th>作成者</th>
              <td><%= @group.owner_name %></td>
            </tr>
          </thead>
        </table>
        <% if current_end_user.present? && @group.owner_id == current_end_user.id %>
        <!--current_end_user.present?がないと一般ユーザーが閲覧できない-->
          <%= link_to "メンバーにイベントを通知（次のページでメール作成）", new_group_event_notice_path(@group), class: 'btn btn-dark' %>
          <div class='row mt-4'>
            <div class='col-4 mx-auto'>
              <%= link_to "編集", edit_group_path(@group), class: 'btn btn-outline-dark btn-block' %>
            </div>
            <div class='col-4 mx-auto'>
              <%= link_to "削除", group_path, method: :delete, class: 'btn btn-outline-dark btn-block' %>
            </div>
          </div>
        <% elsif @group.end_users.include?(current_end_user) %>
          <div class='row'>
            <div class='col-4 mx-auto'>
              <%= link_to "戻る", groups_path, class: 'btn btn-outline-dark btn-block' %>
            </div>
            <div class='col-4 mx-auto'>
              <%= link_to "脱退する", group_withdraw_path(@group), method: :delete, class: 'btn btn-dark btn-block' %>
            </div>
            </div>
        <% else %>
            <div class='row'>
              <div class='col-4 mx-auto'>
                <%= link_to "戻る", groups_path, class: 'btn btn-outline-dark btn-block' %>
              </div>
              <div class='col-4 mx-auto'>
                <%= link_to "参加する", group_join_path(@group), class: 'btn btn-dark btn-block' %>
              </div>
            </div>
        <% end %>
    </div>
  </div>
</div>
