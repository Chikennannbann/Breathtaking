<div class='container'>
  <div class='row justify-content-center'>
    <div class='col-6'>
      <h2><%= @group.name %>メンバーへのメール</h2>
      <%= form_with model:@group, url: group_event_notices_path(@group), method: :post do |f| %>
      <div class='form-group'>
        <%= f.label:"タイトル" %>
        <%= f.text_field :title, class:'form-control'%>
      </div>
      <div class="form-group">
        <%=f.label:"本文" %>
        <%= f.text_area :body, class:'form-control' %>
      </div>
      <div>
      <%= f.submit "送信", class: 'btn btn-outline-success' %>
      <% end %>
    </div>
  </div>
</div>