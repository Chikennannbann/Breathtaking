<div class='container my-5'>
  <h3><i class="fa-solid fa-heart text-danger"></i><%= t('.favorited_posts')%>ï¼š <%= @favorite_posts.count %><%= t('.post') %>  <%= link_to t('.back_to_mypage'), end_user_path(current_end_user), class: 'btn btn-outline-dark' %></h3>
  <div class='row card-wrapper'>
    <% if @favorite_posts.present? %>
      <%= render 'public/posts/index', posts: @favorite_posts %>
    <% else %>
      <p><%= t('.no_favorited_post')%>
      <%= link_to t('.check_posts'), posts_path, class: 'btn btn-dark btn-sm' %></p>
    <% end %>
  </div>
  <div class='row'>
    <div class='mx-auto mt-4'>
      <div class='pagination'><%= paginate @favorite_posts %></div>
    </div>
  </div>
</div>
