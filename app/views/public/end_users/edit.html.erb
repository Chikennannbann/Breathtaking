<div class='container my-5'>
  <div class='row'>
    <div class='col-sm-12 col-md-10 col-lg-6 px-sm-0 mx-auto text-center'>
      <h2><%= t('.edit_end_user') %></h2>
      <%= render 'layouts/errors', object: @end_user %>
      <%= form_with model:@end_user, url: end_user_path, method: :patch do |f| %>
        <table class='table text-left my-4'>
          <tr>
            <td><%= t('.profile_image') %></td>
            <td><%= f.file_field :profile_image, size: "200x200", accept:'image/*' %></td>
          </tr>
          <tr>
            <td><%= t('.name') %></td>
            <td><%= f.text_field :name, autofocus: true, autocomplete: "name", size:30 %></td>
          </tr>
          <tr>
            <td><%= t('.introduction') %></td>
            <td><%= f.text_area :introduction, size:'30x3' %></td>
          </tr>
        </table>
        <div class='row'>
          <div class='col-4 mx-auto'>
            <%= link_to t('.back'), end_user_path(@end_user), class: 'btn btn-outline-dark btn-block' %>
          </div>
          <div class='col-4 mx-auto'>
            <%= f.submit t('.update'), class: 'btn btn-dark btn-block' %>
          </div>
        </div>
        <div class='mt-5'>
          <u><%= link_to t('.unsubscribe'), confirm_unsubscribe_path, class:'text-dark' %></u>
        </div>
      <% end %>
    </div>
  </div>
</div>