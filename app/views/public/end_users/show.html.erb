<div class='container'>
  <div class='row'>
    <table class='table'>
      <tr>
        <td colspan='2'><%= image_tag @end_user.get_profile_image, size:'150x150' %></td>
      </tr>
      <tr>
        <td colspan='2'><%= @end_user.name %></td>
      </tr>
      <tr>
        <td colspan='2'><%= @end_user.introduction %></td>
      </tr>
      <tr>
        <td>投稿数:<%= @posts.count %></td>
        <td>グループ数:</td>
      </tr>
      <% if @end_user == current_end_user && @end_user.name != 'guestenduser'%>
      <tr>
        <td colspan='2'><%= link_to "ユーザー情報を変更する", edit_end_user_path, class: "btn btn-success" %></td>
      </tr>
      <% end %>
    </table>

      <% @posts.each do |f| %>
        <div class='mr-5'>
        <%= link_to image_tag(f.get_view_image, size:'300x200'), post_path(f.id) %><br>
        <%= f.title %>
        </div>
      <% end %>
  </div>
</div>
